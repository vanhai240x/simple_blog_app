<h3><div class="alert alert-success" role="alert">Comments</div></h3>
<% @post.comments.each do |comment| %>
    <div class="well">
        <p>
            <strong>
                <%= comment.username %>
            </strong>:
            <%= comment.body %>
            <%= link_to  "[X]", [comment.post, comment], method: :delete, data: { confirm: 'Are you sure ?'} %>
        </p>
    </div>
<% end %>
<hr>